source "https://rubygems.org"

# Ruby 버전 호환성
ruby '~> 2.6.0'

# Jekyll 및 필수 gem들
gem 'jekyll', '~> 4.3.0'
gem 'jekyll-paginate', '~> 1.1'
gem 'jekyll-sitemap', '~> 1.3'
gem 'jekyll-gist', '~> 1.5'
gem 'jekyll-feed', '~> 0.1'
gem 'jekyll-include-cache', '~> 0.1'

# sass-embedded 대신 sassc 사용 (더 안정적)
gem 'sassc', '~> 2.4'

gem 'tzinfo'
gem 'tzinfo-data', platforms: [:mingw, :mswin, :x64_mingw]

# Ruby 2.6과 호환되는 ffi 버전
gem 'ffi', '~> 1.15.5'
